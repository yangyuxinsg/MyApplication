<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.myapplication.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/callnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击事件第一种写法：内部类实现接口 new实现类"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击事件第二种写法（匿名内部类）"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="522dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击事件第三种写法（让当前的activity实现接口）"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="522dp" />

        <Button
            android:onClick="testClick"
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击事件第四种写法（在布局文件中配置点击事件的方法）"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="522dp" />

        <EditText
            android:hint="请输入账号"
            android:id="@+id/edit_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <EditText
            android:hint="请输入密码"
            android:id="@+id/edit_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            />

        <Button
            android:onClick="sendMsg"
            android:id="@+id/msgSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送/登陆"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="522dp" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
